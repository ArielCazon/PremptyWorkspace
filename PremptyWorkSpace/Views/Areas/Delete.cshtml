@model PremptyWorkSpace.Models.Areas

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/_LayoutPage1.cshtml";
}
<div class="account-container register">
    <div class="content clearfix">
        <div class="login-fields">

            @if (!String.IsNullOrEmpty(ViewBag.Mensaje))
            { 
                
                <div class="alert">
                    <h3>
                    @ViewBag.Mensaje
                </h3>
                    </div>

                <div class="form-actions">
                    <a href="~/Areas/Index">
                        <input type="button" value="Volver" class="btn btn-danger ingresar" />
                    </a>
                </div>
            }
            else
            {
               
                <h4>Esta accion eliminará la siguiente area</h4>
                <div class="control-group">
                    @Html.DisplayNameFor(model => model.Descripcion)
                    <div class="alert alert-info">
                        @Html.DisplayFor(model => model.Descripcion)
                    </div>
                </div>

                <div class="control-group">
                    @Html.DisplayNameFor(model => model.Entidades.RazonSocial)
                    <div class="alert alert-info">
                        @Html.DisplayFor(model => model.Entidades.RazonSocial)
                    </div>
                </div>
        
                using (@Html.BeginForm())
                {          
                <div class="form-actions">
                    <a href="~/Areas/Index">
                        <input type="button" value="Volver" class="btn btn-danger ingresar" /></a>
                    <input type="submit" value="Eliminar" class=" btn btn-danger ingresar" />
                </div>
                }
            }
        </div>
    </div>
      </div>

@model PremptyWorkSpace.Models.Areas

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<div class="account-container register">
    <div class="content clearfix">

        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <div class="login-fields">
                <h2>Editar area</h2>

                <div class="field">
                    @Html.LabelFor(model => model.Descripcion)

                    @Html.TextBoxFor(model => model.Descripcion, new {@required = "true", maxlength = "50", type = "text"})
    
                </div>

                <div class="field">
                    @Html.LabelFor(model => model.IdEntidad, "Entidades")

                    @Html.DropDownList("IdEntidad", null, "Seleccione entidad", new {@required="true"})
                </div>
            </div> 
            <div class="form-actions">
                <a href="~/Areas/Index">
                    <input type="button" value="Volver" class="btn btn-danger ingresar" /></a>
                <input id="Ingresar" type="submit" value="Editar" class=" btn btn-danger ingresar" />

            </div>
        }
    </div>
</div>

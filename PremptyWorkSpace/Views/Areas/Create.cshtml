@model PremptyWorkSpace.Models.Areas

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<div class="account-container register">
    <div class="content clearfix">

        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <div class="login-fields">
                <h2>Crear area</h2>

                <div class="field">
                    @Html.LabelFor(model => model.Descripcion)

                    @Html.TextBoxFor(model => model.Descripcion, new { @placeholder = "Ingrese una descripcion",@required = "true", maxlength = "20", type = "text"})
                    @Html.ValidationMessageFor(model => model.Descripcion)
                </div>

            </div>
            <div class="form-actions">
                <a href="~/Areas/Index">
                    <input type="button" value="Volver" class="btn btn-danger ingresar" /></a>
                <input id="Ingresar" type="submit" value="Crear area" class=" btn btn-danger ingresar" />

            </div>
        }

    </div>
</div>

@model PremptyWorkSpace.Models.Usuarios


@{
    ViewBag.Title = "Login";
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Login</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">

    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/bootstrap-responsive.min.css" rel="stylesheet" type="text/css" />

    <link href="~/css/font-awesome.css" rel="stylesheet">
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600" rel="stylesheet">

    <link href="~/css/style.css" rel="stylesheet" type="text/css">
    <link href="~/css/pages/signin.css" rel="stylesheet" type="text/css">
</head>
<body>

    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a href="#myModal" role="button" class="button btn btn-danger btn-large ingresar" data-toggle="modal">Suscríbete</a>

                <div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h3 id="myModalLabel">¡Suscríbete a Prempty! </h3>
                    </div>
                    <div class="modal-body">

                        @using (Html.BeginForm())
                        {
                            <fieldset>
                                <div class="control-group">
                                    <label class="control-label" for="firstname">Nombre</label>
                                    <div class="controls">
                                        <input type="text" class="span4" id="firstname">
                                    </div>
                                 </div>
                               <div class="control-group">
                                    <label class="control-label" for="lastname">Apellido</label>
                                    <div class="controls">
                                        <input type="text" class="span4" id="lastname">
                                    </div>
                                    <!-- /controls -->
                                </div>
                                <!-- /control-group -->


                                <div class="control-group">
                                    <label class="control-label" for="email">Email</label>
                                    <div class="controls">
                                        <input type="text" class="span4" id="email">
                                    </div>
                                    <!-- /controls -->
                                </div>
                                <div class="login-actions">
                                    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancelar</button>
                                    <input id="Ingresar" type="submit" value="Enviar formulario de suscripcion" class="btn btn-danger ingresar" onclick="parent.location=¨'rodrigoyucramita@gmail.com'" />

                                </div>


                            </fieldset>
                        }

                    </div>


                </div>


            </div>
        </div>
    </div>

    <div class="logos">
        <img src="~/img/logo_aprobado.png" width="200px" height="200px" />
        <h3>Sistema de Detección y Gestión de Ausencias                            
        </h3>
    </div>
    <div class="account-container">

        <div class="content clearfix">
            @using (Html.BeginForm(FormMethod.Post))
            {                
                <h1>Login</h1>
                <div class="login-fields">
                    <p>Introduzca su nombre de usuario y contraseña</p>
                    <div class="field">
                        @Html.LabelFor(u => u.NombreUsuario)

                        @Html.TextBoxFor(u => u.NombreUsuario, new { @class = "login username-field", @placeholder = "Ingrese su nombre de usuario..." })
                    </div>
                    <div class="field">
                        @Html.LabelFor(u => u.Password)
                        @Html.PasswordFor(u => u.Password, new { @class = "login password-field", @placeholder = "Ingrese su password..." })
                    </div>
                </div>
               if (!string.IsNullOrEmpty(ViewBag.Error))
                { 
                 <div class="alert">
                     @ViewBag.Error
                    </div> 
                }
                <div class="login-actions">
                    <input id="Ingresar" type="submit" value="Ingresar" class="button btn btn-danger btn-large ingresar" />
                </div>
          
            }

        </div>
    </div>
    <script src="~/js/jquery-1.7.2.min.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/signin.js"></script>

</body>

</html>


@model IEnumerable<PremptyWorkSpace.Models.Usuarios>

@{
    ViewBag.Title = "Gerente";
    Layout = "~/Views/_LayoutPage1.cshtml";
}
<div class="subnavbar">
    <div class="subnavbar-inner">
        <div class="container">
            <ul class="mainnav">
                <li><a href="~/Menu/Select"><i class="shortcut-icon icon-user"></i><span>Empleado</span> </a></li>
                <li><a href="~/Control/Index"><i class="shortcut-icon icon-dashboard"></i><span>Control de asistencias</span> </a></li>
                <li><a href="~/Estadistica/Index"><i class="shortcut-icon  icon-signal"></i><span>Estadisticas</span> </a></li>


            </ul>
        </div>
        <!-- /container -->
    </div>
    <!-- /subnavbar-inner -->
</div>
<div class="container">
    <div class="row">
        <div class="span12">
            <div id="target-1" class="widget">
                <div class="widget widget-table action-table">
                    <div class="widget-header">
                        <i class="icon-th-list"></i>
                        <h3>Listado de Empleados</h3>
                    </div>
                    <div class="widget-content">

                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>

                                    <th>
                                        <div class="display-label">
                                            @Html.DisplayNameFor(model => model.Nombre)
                                        </div>
                                    </th>
                                    <th>
                                        <div class="display-label">
                                            @Html.DisplayNameFor(model => model.Apellido)
                                        </div>
                                    </th>
                                    <th>
                                        <div class="display-label">
                                            @Html.DisplayNameFor(model => model.FechaIngreso)
                                        </div>
                                    </th>
                                    <th>
                                        <div class="display-label">
                                            @Html.DisplayNameFor(model => model.Domicilio)
                                        </div>
                                    </th>
                                    <th>
                                        <div class="display-label">
                                            @Html.DisplayNameFor(model => model.NombreUsuario)
                                        </div>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Apellido)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FechaIngreso)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Domicilio)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NombreUsuario)
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                    <!-- /widget-content -->
                </div>



                <!-- /shortcuts -->
            </div>
            <!-- /widget-content -->
        </div>
    </div>
</div>


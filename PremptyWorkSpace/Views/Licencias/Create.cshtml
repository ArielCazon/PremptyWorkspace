@model PremptyWorkSpace.Models.Licencias


@{
    ViewBag.Title = "Create";
    Layout = "~/Views/_LayoutPage1.cshtml";
}
  <link href="@Url.Content("~/css/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <script src="~/js/jquery-3.0.0.min.js"></script>
<script src="~/js/jquery-ui-1.9.1.custom.js"></script>
    <script src="~/js/jquery-ui.js" type="text/javascript"></script>
<div class="account-container register">
    <div class="content clearfix">

        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <div class="login-fields">
                <h2>Crear licencia</h2>


                <div class="field">
                    @Html.LabelFor(model => model.IdUsuario, "Usuarios")

                    @Html.DropDownList("IdUsuario",null,"Seleccione un usuario", new {@required="true"})
                   
                </div>

                <div class="field">
                    @Html.LabelFor(model => model.Fecha)
                    @Html.TextBoxFor(model => model.Fecha, new {@placeholder = "Ingrese fecha de la licencia", @required = "true", maxlength = "20", type = "datetime" })
 
                </div>

                <div class="field">
                    @Html.LabelFor(model => model.Motivo, "MotivoLicencia")

                    @Html.DropDownList("Motivo", null, "Motivo de licencia", new { @required="true"})
              
                </div>

                <div class="field">
                    @Html.LabelFor(model => model.Descripcion)

                    @Html.TextBoxFor(model => model.Descripcion, new { @placeholder = "Ingrese Descripcion",@required = "true", maxlength = "30", type = "datetime"})
      
                </div>

      
            </div>
        <div class="form-actions">
                <a href="~/Licencias/Index">
                    <input type="button" value="Volver" class="btn btn-danger ingresar" /></a>
                <input id="Ingresar" type="submit" value="Crear licencia" class=" btn btn-danger ingresar" />

            </div>
        }
    </div>
 </div>


@model PremptyWorkSpace.Models.Ingresos

@{
    ViewBag.Title = "Horas";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<div class="subnavbar">
    <div class="subnavbar-inner">
        <div class="container">
            <ul class="mainnav">
                <li class="active"><a href="~/Horas/Index"><i class="shortcut-icon icon-time"></i><span>Control de Horas</span> </a></li>
                <li><a href="~/Usuarios/Index"><i class="shortcut-icon icon-group"></i><span>Usuarios</span> </a></li>
                <li><a href="~/Eventos/Index"><i class="shortcut-icon  icon-calendar"></i><span>Eventos</span> </a></li>
                <li><a href="~/Licencias/Index"><i class="shortcut-icon   icon-list-alt"></i><span>Licencias</span> </a></li>
                <li><a href="~/Areas/Index"><i class="shortcut-icon icon-th"></i><span>Areas</span> </a></li>
            </ul>
        </div>
    </div>
</div>

<div class="account-container register">
    <div class="content clearfix">
        <div class="login-fields">
            <h2>Control de Horas</h2>
            <div class="alert alert-info">
                Fecha y hora actual: @DateTime.Now
            </div>
            <div class="alert alert-info">
                <p>Hora de ingreso: </p>
                <p>@ViewBag.HoraIngreso</p>
                <a href="~/Horas/MarcarEntradas">
                    <button class="btn btn-danger ingresar">Marcar Entrada</button></a>
            </div>
            <div class="alert alert-info">
                <p>Hora de salida: </p>
                <p>@ViewBag.HoraSalida</p>
                <a href="~/Horas/MarcarSalidas">
                    <button class="btn btn-danger ingresar">Marcar Salida</button></a>
            </div>

        </div>

    </div>
</div>


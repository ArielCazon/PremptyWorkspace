@model PremptyWorkSpace.Models.Usuarios


@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<div class="account-container register">

    <div class="content clearfix">
        @using (Html.BeginForm())
        {
         
            <div class="login-fields">
                <h2>Editar usuario</h2>
                <div class="field">
                    @Html.LabelFor(model => model.Nombre)

                    @Html.TextBoxFor(model => model.Nombre, new {@required = "true", maxlength = "20", type = "text"})
                   
                </div>

                <div class="field">
                    @Html.LabelFor(model => model.Apellido)

                    @Html.TextBoxFor(model => model.Apellido, new {@required = "true", maxlength = "20", type = "text"})
                   
                </div>
                <div class="field">
                    @Html.LabelFor(model => model.NombreUsuario)

                    @Html.TextBoxFor(model => model.NombreUsuario, new {@required = "true", maxlength = "20", type = "text"})
                    
                </div>
                <div class="field">
                    @Html.LabelFor(model => model.FechaNac)

                    @Html.TextBoxFor(model => model.FechaNac, new {@required = "true", maxlength = "20", type = "datetime"})
                    
                </div>

                <div class="field">
                    @Html.LabelFor(model => model.Areas, "Areas")

                    @Html.DropDownList("IdArea", null, "Seleccione un area", new { @required="true"})
                   
                </div>
                
                <div class="field">
                    @Html.LabelFor(model => model.Email)

                    @Html.TextBoxFor(model => model.Email, new {@required = "true", type = "email"})
                    
                </div>
                        
                <div class="field">
                    @Html.LabelFor(model => model.Domicilio)

                    @Html.TextBoxFor(model => model.Domicilio, new {@required = "true", type = "text"})
                    
                </div>
                
            </div> 
            <div class="form-actions">
                <a href="~/Usuarios/Index">
                    <input type="button" value="Volver" class="btn btn-danger ingresar" /></a>
                <input id="Ingresar" type="submit" value="Editar" class=" btn btn-danger ingresar" />

            </div>
        }
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $.datepicker.regional['es'] = {
            closeText: 'Cerrar',
            prevText: '<Ant',
            nextText: 'Sig>',
            currentText: 'Hoy',
            monthNames: ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'],
            monthNamesShort: ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct', 'Nov', 'Dic'],
            dayNames: ['Domingo', 'Lunes', 'Martes', 'Miércoles', 'Jueves', 'Viernes', 'Sábado'],
            dayNamesShort: ['Dom', 'Lun', 'Mar', 'Mié', 'Juv', 'Vie', 'Sáb'],
            dayNamesMin: ['Do', 'Lu', 'Ma', 'Mi', 'Ju', 'Vi', 'Sá'],
            weekHeader: 'Sm',
            dateFormat: 'dd/mm/yy',
            firstDay: 1,
            isRTL: false,
            showMonthAfterYear: false,
            yearSuffix: ''
        };
        $.datepicker.setDefaults($.datepicker.regional['es']);
        $(document).ready(function () {
            $('#FechaNac').datepicker({
                changeMonth: true,
                changeYear: true
            });
        });
    });


</script>

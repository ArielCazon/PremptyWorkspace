@model PremptyWorkSpace.Models.Usuarios
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<div class="account-container register">
    <div class="content clearfix">

        @using (Html.BeginForm())
        {
            <div class="login-fields">
                <h2>Crear usuario</h2>

                <div class="field">
                    @Html.LabelFor(model => model.IdRol, "Roles")

                    @Html.DropDownList("IdRol", null, "Seleccione un rol", new {@required="true"})
                </div>


                <div class="field">
                    @Html.LabelFor(model => model.Nombre)

                    @Html.TextBoxFor(model => model.Nombre, new { @placeholder = "Ingrese un nombre", @required = "true", maxlength = "20", type = "text" })

                </div>

                <div class="field">
                    @Html.LabelFor(model => model.Apellido)

                    @Html.TextBoxFor(model => model.Apellido, new { @placeholder = "Ingrese un apellido", @required = "true", maxlength = "20", type = "text" })

                </div>
                <div class="field">
                    @Html.LabelFor(model => model.NombreUsuario)

                    @Html.TextBoxFor(model => model.NombreUsuario, new { @placeholder = "Ingrese un Nombre Usuario", @required = "true", maxlength = "20", type = "text" })

                </div>

                <div class="field">
                    @Html.LabelFor(model => model.Legajo)

                    @Html.TextBoxFor(model => model.Legajo, new { @placeholder = "Ingrese un Nro. de legajo", @required = "true", type = "number"})

                </div>

                <div class="field">
                    @Html.LabelFor(model => model.Password)

                    @Html.TextBoxFor(model => model.Password, new { @placeholder = "Ingrese una contraseña", type = "password", pattern = ".{6,32}", required = "true", title = "La password debe tener mas de 6 caracteres" })

                </div>

                <div class="field">
                    @Html.LabelFor(model => model.FechaNac)

                    @Html.TextBoxFor(model => model.FechaNac, new { @placeholder = "Ingrese fecha de nacimiento", type = "datetime", @required = "true" })

                </div>

                <div class="field">
                    @Html.LabelFor(model => model.FechaIngreso)

                    @Html.TextBoxFor(model => model.FechaIngreso, new { @placeholder = "Ingrese fecha de ingreso", type = "datetime", @required = "true" })

                </div>


                <div class="field">
                    @Html.LabelFor(model => model.Areas, "Areas")

                    @Html.DropDownList("IdArea", null, "Seleccione un area", new { @required="true"})
                 

                </div>

                <div class="field">
                    @Html.LabelFor(model => model.Domicilio)

                    @Html.TextBoxFor(model => model.Domicilio, new { @placeholder = "Ingrese el domicilio", @required = "true", maxlength = "20", type = "text" })

                </div>


                <div class="field">
                    @Html.LabelFor(model => model.Email)

                    @Html.TextBoxFor(model => model.Email, new { @placeholder = "Ingrese el email", @required = "true", type = "email", @pattern="[a-zA-Z0-9_]+([.][a-zA-Z0-9_]+)*@[a-zA-Z0-9_]+([.][a-zA-Z0-9_]+)*[.][a-zA-Z]{1,5}" })

                </div>


            </div>
            <div class="form-actions">
                <a href="~/Usuarios/Index">
                    <input type="button" value="Volver" class="btn btn-danger ingresar" /></a>
                <input id="Ingresar" type="submit" value="Crear usuario" class=" btn btn-danger ingresar" />

            </div>
            
        }
    </div>
</div>



<script type="text/javascript">
    $(document).ready(function () {
        $.datepicker.regional['es'] = {
            closeText: 'Cerrar',
            prevText: '<Ant',
            nextText: 'Sig>',
            currentText: 'Hoy',
            monthNames: ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'],
            monthNamesShort: ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct', 'Nov', 'Dic'],
            dayNames: ['Domingo', 'Lunes', 'Martes', 'Miércoles', 'Jueves', 'Viernes', 'Sábado'],
            dayNamesShort: ['Dom', 'Lun', 'Mar', 'Mié', 'Juv', 'Vie', 'Sáb'],
            dayNamesMin: ['Do', 'Lu', 'Ma', 'Mi', 'Ju', 'Vi', 'Sá'],
            weekHeader: 'Sm',
            dateFormat: 'dd/mm/yy',
            firstDay: 1,
            isRTL: false,
            showMonthAfterYear: false,
            yearSuffix: ''
        };
        $.datepicker.setDefaults($.datepicker.regional['es']);

        $(document).ready(function () {
            $('#FechaNac').datepicker({
            });
        });

        $(document).ready(function () {
            $('#FechaIngreso').datepicker({
            });
        });
    });
</script>




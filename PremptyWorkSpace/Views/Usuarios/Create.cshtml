@model PremptyWorkSpace.Models.Usuarios
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<div class="account-container register">
    <div class="content clearfix">

        @using (Html.BeginForm())
        {
            <div class="login-fields">
                <h2>Crear usuario</h2>

                <div class="field">
                    @Html.LabelFor(model => model.IdRol, "Roles")

                    @Html.DropDownList("IdRol", "Seleccione un rol")

                    @Html.ValidationMessageFor(model => model.IdRol)
                </div>


                <div class="field">
                    @Html.LabelFor(model => model.Nombre)

                    @Html.TextBoxFor(model => model.Nombre, new { @placeholder = "Ingrese un nombre" })
                    @Html.ValidationMessageFor(model => model.Nombre)
                </div>

                <div class="field">
                    @Html.LabelFor(model => model.Apellido)

                    @Html.TextBoxFor(model => model.Apellido, new { @placeholder = "Ingrese un apellido" })
                    @Html.ValidationMessageFor(model => model.Apellido)
                </div>
                <div class="field">
                    @Html.LabelFor(model => model.NombreUsuario)

                    @Html.TextBoxFor(model => model.NombreUsuario, new { @placeholder = "Ingrese un Nombre Usuario" })
                    @Html.ValidationMessageFor(model => model.NombreUsuario)
                </div>

                <div class="field">
                    @Html.LabelFor(model => model.Legajo)

                    @Html.TextBoxFor(model => model.Legajo, new { @placeholder = "Ingrese un Nro. de legajo" })
                    @Html.ValidationMessageFor(model => model.Legajo)
                </div>

                <div class="field">
                    @Html.LabelFor(model => model.Password)

                    @Html.TextBoxFor(model => model.Password, new { @placeholder = "Ingrese una contraseña", @type = "password" })
                    @Html.ValidationMessageFor(model => model.Password)
                </div>

                <div class="field">
                    @Html.LabelFor(model => model.FechaNac)

                    @Html.TextBoxFor(model => model.FechaNac, new { @placeholder = "Ingrese fecha de nacimiento" })
                    @Html.ValidationMessageFor(model => model.FechaNac)
                </div>

                <div class="field">
                    @Html.LabelFor(model => model.FechaIngreso)

                    @Html.TextBoxFor(model => model.FechaIngreso, new { @placeholder = "Ingrese fecha de ingreso" })
                    @Html.ValidationMessageFor(model => model.FechaIngreso)
                </div>


                <div class="field">
                    @Html.LabelFor(model => model.Areas, "Areas")

                    @Html.DropDownList("IdArea", "Seleccione un area")
                    @Html.ValidationMessageFor(model => model.Areas)
                </div>

                <div class="field">
                    @Html.LabelFor(model => model.Domicilio)

                    @Html.TextBoxFor(model => model.Domicilio, new { @placeholder = "Ingrese el domicilio" })
                    @Html.ValidationMessageFor(model => model.Domicilio)
                </div>


                <div class="field">
                    @Html.LabelFor(model => model.Email)

                    @Html.TextBoxFor(model => model.Email, new { @placeholder = "Ingrese el email" })
                    @Html.ValidationMessageFor(model => model.Email)
                </div>


            </div>
            <div class="form-actions">
                <a href="~/Usuarios/Index">
                    <input type="button" value="Volver" class="btn btn-danger ingresar" /></a>
                <input id="Ingresar" type="submit" value="Crear usuario" class=" btn btn-danger ingresar" />

            </div>
            
        }
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $.datepicker.regional['es'] = {
            closeText: 'Cerrar',
            prevText: '<Ant',
            nextText: 'Sig>',
            currentText: 'Hoy',
            monthNames: ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'],
            monthNamesShort: ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct', 'Nov', 'Dic'],
            dayNames: ['Domingo', 'Lunes', 'Martes', 'Miércoles', 'Jueves', 'Viernes', 'Sábado'],
            dayNamesShort: ['Dom', 'Lun', 'Mar', 'Mié', 'Juv', 'Vie', 'Sáb'],
            dayNamesMin: ['Do', 'Lu', 'Ma', 'Mi', 'Ju', 'Vi', 'Sá'],
            weekHeader: 'Sm',
            dateFormat: 'dd/mm/yy',
            firstDay: 1,
            isRTL: false,
            showMonthAfterYear: false,
            yearSuffix: ''
        };
        $.datepicker.setDefaults($.datepicker.regional['es']);

        $(document).ready(function () {
            $('#FechaNac').datepicker({
            });
        });

        $(document).ready(function () {
            $('#FechaIngreso').datepicker({
            });
        });
    });
</script>




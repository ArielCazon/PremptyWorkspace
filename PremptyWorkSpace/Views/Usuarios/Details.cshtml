@model PremptyWorkSpace.Models.Usuarios

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/_LayoutPage1.cshtml";
}
<div class="account-container register">
    <div class="content clearfix">
        <div class="login-fields">
            <h2>Detalles del usuario</h2>

            <div class="alert alert-info">
                @Html.DisplayNameFor(model => model.Legajo):    

                @Html.DisplayFor(model => model.Legajo)
            </div>

            <div class="alert alert-info">
                @Html.DisplayNameFor(model => model.Nombre):

                @Html.DisplayFor(model => model.Nombre)
            </div>

            <div class="alert alert-info">
                @Html.DisplayNameFor(model => model.Apellido):

                @Html.DisplayFor(model => model.Apellido)
            </div>

            <div class="alert alert-info">
                @Html.DisplayName("Fecha de Nacimiento:")

                @Html.DisplayFor(model => model.FechaNac)
            </div>

            <div class="alert alert-info">
                @Html.DisplayName("Fecha de Ingreso")

                @Html.DisplayFor(model => model.FechaIngreso)
            </div>

            <div class="alert alert-info">
                @Html.DisplayNameFor(model => model.Areas.Descripcion):

                @Html.DisplayFor(model => model.Areas.Descripcion)
            </div>



            <div class="alert alert-info">
                @Html.DisplayNameFor(model => model.Domicilio):

                @Html.DisplayFor(model => model.Domicilio)
            </div>

        </div>



        <div class="form-actions">
            <a href="~/Usuarios/Index">
                <input type="button" value="Volver" class="btn btn-danger ingresar" /></a>
            @Html.ActionLink("Editar", "Edit", new { id = Model.IdUsuario }, new { @class = "btn btn-danger ingresar" })


        </div>
    </div>
</div>

